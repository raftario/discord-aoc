{
    "name": "discord-aoc",
    "version": "0.1.0",
    "description": "Small Discord bot for private Advent of Code leaderboards",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "private": true,
    "main": "src/index.ts",
    "license": "MIT",
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start:dev": "ts-node-dev src/index.ts",
        "start:prod": "ts-node --transpile-only src/index.ts",
        "lint:fix": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "dependencies": {
        "discord.js": "^12.5.1",
        "dotenv": "^8.2.0",
        "superagent": "^6.1.0",
        "table": "^6.0.4"
    },
    "devDependencies": {
        "@types/node": "*",
        "@types/superagent": "^4.1.10",
        "@types/table": "^6.0.0",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-unicorn": "^23.0.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.1.2"
    }
}
